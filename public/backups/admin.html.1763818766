    <!-- Edit Student Modal -->
    <div id="editModal" class="modal">
        <div class="modal-content">
            <div class="modal-header">
                <span>ç¼–è¾‘å­¦ç”Ÿä¿¡æ¯</span>
                <button class="modal-close" onclick="closeEditModal()">Ã—</button>
            </div>
            <div class="form-group">
                <label for="editStudentName">å­¦ç”Ÿåç§°</label>
                <input type="text" id="editStudentName">
            </div>
            <div class="form-group">
                <label for="editStudentScore">ç§¯åˆ†</label>
                <input type="number" id="editStudentScore">
            </div>
            <div class="form-group">
                <label for="editStudentGroup">åˆ†ç»„</label>
                <select id="editStudentGroup"></select>
            </div>
            <div class="button-group">
                <button class="btn-primary" onclick="saveEdit()">ä¿å­˜</button>
                <button class="btn-secondary" onclick="closeEditModal()">å–æ¶ˆ</button>
            </div>
        </div>
    </div>

    <!-- Delete Student Modal -->
    <div id="deleteModal" class="modal">
        <div class="modal-content">
            <div class="modal-header">
                <span>ç¡®è®¤åˆ é™¤</span>
                <button class="modal-close" onclick="closeDeleteModal()">Ã—</button>
            </div>
            <p id="deleteMessage" style="margin-bottom: 20px; font-size: 14px; color: #666;"></p>
            <div class="button-group">
                <button class="btn-danger" onclick="confirmDelete()">ç¡®è®¤åˆ é™¤</button>
                <button class="btn-secondary" onclick="closeDeleteModal()">å–æ¶ˆ</button>
            </div>
        </div>
    </div>

    <!-- Delete Group Modal -->
    <div id="deleteGroupModal" class="modal">
        <div class="modal-content">
            <div class="modal-header">
                <span>ç¡®è®¤åˆ é™¤</span>
                <button class="modal-close" onclick="closeDeleteGroupModal()">Ã—</button>
            </div>
            <p id="deleteGroupMessage" style="margin-bottom: 20px; font-size: 14px; color: #666;"></p>
            <div class="button-group">
                <button class="btn-danger" onclick="confirmDeleteGroup()">ç¡®è®¤åˆ é™¤</button>
                <button class="btn-secondary" onclick="closeDeleteGroupModal()">å–æ¶ˆ</button>
            </div>
        </div>
    </div>

    <script>
        const API_URL = '/api';
        let currentEditId = null;
        let currentDeleteId = null;
        let currentDeleteGroupId = null;
        let allStudents = [];
        let allGroups = [];
        let currentSort = 'id';
        let currentOrder = 'ASC';

        // Initialize
        document.addEventListener('DOMContentLoaded', () => {
            loadGroups();
            loadStudents();
            setInterval(loadStudents, 30000);
        });

        // Switch tabs
        function switchTab(tabName) {
            document.querySelectorAll('.tab-content').forEach(tab => tab.classList.remove('active'));
            document.querySelectorAll('.tab').forEach(btn => btn.classList.remove('active'));
            document.getElementById(tabName).classList.add('active');
            event.target.classList.add('active');
            if (tabName === 'groups-tab') {
                loadGroups();
            } else {
                loadStudents();
            }
        }

        // Load groups
        async function loadGroups() {
            try {
                const response = await fetch(`${API_URL}/groups`);
                const result = await response.json();
                if (result.success) {
                    allGroups = result.data;
                    updateGroupSelects();
                    renderGroups(allGroups);
                }
            } catch (error) {
                showAlert('åŠ è½½åˆ†ç»„å¤±è´¥: ' + error.message, 'error');
            }
        }

        // Update group select dropdowns
        function updateGroupSelects() {
            const selects = document.querySelectorAll('select[id$="Group"]');
            selects.forEach(select => {
                const currentValue = select.value;
                select.innerHTML = allGroups.map(g => `<option value="${g.id}">${g.name}</option>`).join('');
                if (currentValue) select.value = currentValue;
            });
        }

        // Render groups
        function renderGroups(groups) {
            const container = document.getElementById('groupsList');
            if (groups.length === 0) {
                container.innerHTML = `
                    <div class="empty-state">
                        <div class="empty-state-icon">ğŸ“‹</div>
                        <div>æš‚æ— åˆ†ç»„æ•°æ®</div>
                    </div>
                `;
                return;
            }

            container.innerHTML = groups.map(group => `
                <div class="group-item">
                    <div class="group-info">
                        <div class="group-color" style="background-color: ${group.color}"></div>
                        <div class="group-name">${escapeHtml(group.name)}</div>
                    </div>
                    <div class="student-actions">
                        <button class="btn-secondary btn-small" onclick="openEditGroupModal(${group.id})">ç¼–è¾‘</button>
                        <button class="btn-danger btn-small" onclick="openDeleteGroupModal(${group.id})">åˆ é™¤</button>
                    </div>
                </div>
            `).join('');
        }

        // Add group
        async function addGroup() {
            const name = document.getElementById('groupName').value.trim();
            const color = document.getElementById('groupColor').value;

            if (!name) {
                showAlert('è¯·è¾“å…¥åˆ†ç»„åç§°', 'warning');
                return;
            }

            try {
                const response = await fetch(`${API_URL}/groups`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ name, color })
                });

                const result = await response.json();

                if (result.success) {
                    showAlert('åˆ†ç»„åˆ›å»ºæˆåŠŸ! ğŸ‰', 'success');
                    document.getElementById('groupName').value = '';
                    document.getElementById('groupColor').value = '#667eea';
                    loadGroups();
                } else {
                    showAlert('åˆ›å»ºå¤±è´¥: ' + result.error, 'error');
                }
            } catch (error) {
                showAlert('ç½‘ç»œé”™è¯¯: ' + error.message, 'error');
            }
        }

        // Delete group modal
        function openDeleteGroupModal(groupId) {
            const group = allGroups.find(g => g.id === groupId);
            if (!group) return;

            currentDeleteGroupId = groupId;
            document.getElementById('deleteGroupMessage').textContent = `ç¡®å®šè¦åˆ é™¤ "${group.name}" å—ï¼Ÿ`;
            document.getElementById('deleteGroupModal').classList.add('active');
        }

        function closeDeleteGroupModal() {
            document.getElementById('deleteGroupModal').classList.remove('active');
            currentDeleteGroupId = null;
        }

        async function confirmDeleteGroup() {
            try {
                const response = await fetch(`${API_URL}/groups/${currentDeleteGroupId}`, {
                    method: 'DELETE'
                });

                const result = await response.json();

                if (result.success) {
                    showAlert('åˆ é™¤æˆåŠŸ! ğŸ—‘ï¸', 'success');
                    closeDeleteGroupModal();
                    loadGroups();
                } else {
                    showAlert('åˆ é™¤å¤±è´¥: ' + result.error, 'error');
                }
            } catch (error) {
                showAlert('ç½‘ç»œé”™è¯¯: ' + error.message, 'error');
            }
        }

        // Load all students
        async function loadStudents() {
            try {
                const response = await fetch(`${API_URL}/students?sort=${currentSort}&order=${currentOrder}`);
                const result = await response.json();

                if (result.success) {
                    allStudents = result.data;
                    renderStudents(allStudents);
                    updateStats();
                } else {
                    showAlert('åŠ è½½å¤±è´¥: ' + result.error, 'error');
                }
            } catch (error) {
                showAlert('ç½‘ç»œé”™è¯¯: ' + error.message, 'error');
            }
        }

        // Render students list
        function renderStudents(students) {
            const container = document.getElementById('studentsList');

            if (students.length === 0) {
                container.innerHTML = `
                    <div class="empty-state">
                        <div class="empty-state-icon">ğŸ‘¥</div>
                        <div>æš‚æ— å­¦ç”Ÿæ•°æ®</div>
                    </div>
                `;
                return;
            }

            container.innerHTML = students.map(student => {
                const group = allGroups.find(g => g.id === student.group_id);
                return `
                <div class="student-item">
                    <div class="student-info">
                        <div class="student-name">${escapeHtml(student.name)}</div>
                        <div class="student-score">
                            <span class="label">å½“å‰ç§¯åˆ†:</span>
                            <span class="value">${student.score}</span>
                            ${group ? `<span style="margin-left: 12px; color: #666;">${escapeHtml(group.name)}</span>` : ''}
                        </div>
                    </div>
                    <div class="student-actions">
                        <div class="score-adjuster">
                            <button class="btn-primary btn-small" onclick="adjustScore(${student.id}, -1)">âˆ’</button>
                            <div class="score-display">${student.score}</div>
                            <button class="btn-primary btn-small" onclick="adjustScore(${student.id}, 1)">+</button>
                        </div>
                        <button class="btn-secondary btn-small" onclick="openEditModal(${student.id})">ç¼–è¾‘</button>
                        <button class="btn-danger btn-small" onclick="openDeleteModal(${student.id})">åˆ é™¤</button>
                    </div>
                </div>
            `;
            }).join('');
        }

        // Add student
        async function addStudent() {
            const name = document.getElementById('studentName').value.trim();
            const score = parseInt(document.getElementById('studentScore').value) || 0;
            const group_id = parseInt(document.getElementById('studentGroup').value) || null;

